    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/nzb-segment-check/bin/Debug/net9.0/nzb-segment-check.dll",
            "args": [
                "-config", "${workspaceFolder}/config.yaml",
                "-nzb", "${workspaceFolder}/nzb/small_example.nzb"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}